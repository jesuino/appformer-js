{
  "name": "appformer-js",
  "version": "0.0.0",
  "license": "Apache-2.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "init": "npx lerna bootstrap",
    "build": "npx lerna run build --stream",
    "build:colorful": "npx lerna exec -- yarn run build",
    "start": "docker-compose up --build -d && docker-compose logs -f",
    "stop": "docker-compose down --rmi all"
  },
  "devDependencies": {
    "lerna": "3.4.0"
  }
}
