{
  "name": "appformer-js-vscode-extension",
  "displayName": "KIE :: Micro Editors",
  "description": "",
  "version": "0.0.0",
  "license": "Apache-2.0",
  "engines": {
    "vscode": "^1.33.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kiegroup/appformer-js.git"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "publisher": "kiegroup",
  "main": "./dist/extension/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "dmn",
        "extensions": [
          ".dmn"
        ],
        "aliases": [
          "dmn",
          "Decision Model Notation"
        ]
      },
      {
        "id": "bpmn",
        "extensions": [
          ".bpmn",
          ".bpmn2"
        ],
        "aliases": [
          "bpmn",
          "bpmn2",
          "Business Process Model and Notation"
        ]
      }
    ]
  },
  "scripts": {
    "pack-extension": "vsce package --yarn -o ./dist/kiegroup_microeditors.vsix && yarn run vscode:postpublish",
    "vscode:prepublish": "docker image build -t kiegroup/microeditors_bpmn bpmn-war && docker image save -o bpmn-war/kiegroup_microeditors_bpmn.dockerimage kiegroup/microeditors_bpmn && docker image build -t kiegroup/microeditors_dmn dmn-war && docker image save -o dmn-war/kiegroup_microeditors_dmn.dockerimage kiegroup/microeditors_dmn && yarn run build",
    "vscode:postpublish": "docker image rm kiegroup/microeditors_bpmn && rm bpmn-war/kiegroup_microeditors_bpmn.dockerimage && docker image rm kiegroup/microeditors_dmn && rm dmn-war/kiegroup_microeditors_dmn.dockerimage",
    "build": "yarn run build:fast",
    "build:fast": "rm -rf dist && webpack",
    "compile": "webpack",
    "watch": "webpack",
    "build:prod": "yarn run build && yarn run pack-extension"
  },
  "devDependencies": {
    "vsce": "1.59.0",
    "@types/mocha": "2.2.42",
    "@types/node": "10.12.21",
    "tslint": "5.12.1",
    "typescript": "3.3.1",
    "webpack": "4.15.1",
    "webpack-cli": "3.0.8",
    "@types/vscode": "^1.33.0",
    "vscode": "1.1.28"
  },
  "dependencies": {
    "appformer-js-core": "0.0.0",
    "appformer-js-submarine": "0.0.0",
    "appformer-js-microeditor-router": "0.0.0",
    "appformer-js-microeditor-envelope": "0.0.0"
  }
}
